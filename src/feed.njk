---json
{
    "permalink": "feed.xml",
    "eleventyExcludeFromCollections": true,
    "metadata": {
        "title": "FLY-11ty RSS feed",
        "subtitle": "Because, who doesn't love Opossum's?",
        "url": "https://www.XXX.XX/",
        "feedUrl": "https://www.XXX.XX/feed.xml",
        "author": {
            "name": "XXX",
            "email": "XXX"
        }
    }
}
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>{{ metadata.title}}</title>
    <subtitle>{{ metadata.subtitle }}</subtitle>
    <link href="{{ metadata.feedUrl }}" rel="self"/>
    <link href="{{ metadata.url }}"/>

    <updated>{{ collections.blogPosts | rssLastUpdatedDate }}</updated>
    <id>{{ metadata.url }}</id>
    <author>
        <name>{{ metadata.author.name }}</name>
        <email>{{ metadata.author.email }}</email>
    </author>

    {%- for post in collections.blogPosts | reverse %}

        {% set absolutePostUrl %}{{ post.url | url | absoluteUrl(metadata.url) }}{% endset %}

        <entry>
            <title>{{ post.data.title }}</title>
            <link href="{{ absolutePostUrl }}"/>
            <updated>{{ post.date | rssDate }}</updated>
            <id>{{ absolutePostUrl }}</id>
            <content type="html">{{ post.data.excerpt | htmlToAbsoluteUrls(absolutePostUrl) }}</content>
        </entry>

    {%- endfor %}

</feed>
